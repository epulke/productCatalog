{% extends "base.html" %}

    {% block body %}


        <div class="container text-center">
            <h1>Product Catalog</h1><br>
        </div>
        <div class="container text-center">
            <h5><a href="/createNew">Create New Product</a></h5>
        </div>
        <div class="container text-center">
            <form action="/filter">
                <label for="number">Filter Category:</label>
                <select id="category" name="category">
                    <option value="all">All</option>
                    {% for category in categories %}
                        <option value="{{ category.getName }}">{{ category.getName }}</option>
                    {% endfor %}
                    {# <option value="Footwear">Footwear</option> #}
                    {# <option value="Clothing">Clothing</option> #}
                    {# <option value="Accessories">Accessories</option> #}
                </select>
                <br>
                {% for tag in tags %}
                    <input type="checkbox" id="vehicle1" name="{{ tag.getName }}" value="{{ tag.getId }}">
                    <label for="{{ tag.getName }}"> {{ tag.getName }}</label>
                {% endfor %}
                <br>
                <input type="submit" id="filter" name="filter" value="Filter">
            </form>
        </div>
        <br><br>
        <table class="table container">
            <thead class="table-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Quantity</th>
                <th scope="col">Date Added</th>
                <th scope="col">Date Updated</th>
            </tr>
            </thead>
            <tbody>

            {% for product in products %}
                <tr>
                    <th scope="row"><a href="/products/{{ product.getName }}">
                            {{ product.getName }}
                        </a></th>
                    <td>{{ product.getCategory }}</td>
                    <td>{{ product.getQuantity }}</td>
                    <td>{{ product.getDateAdded }}</td>
                    <td>{{ product.getDateUpdated }}</td>
                </tr>
            {% endfor %}

            </tbody>

        </table>
    {% endblock %}
